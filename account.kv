<AccountScreen>:
	
	BoxLayout:
		orientation: "vertical"
		padding: [80, 20]
		spacing: 20
		
		MDSwitch:
			pos_hint: {"right": 1}
			#widget_style: "ios"
			on_active: app.switch_mode(self)
		
		Label:
			color: (0,0,0,1) if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			text: "Username:"
			text_size: self.size
			halign: "left"
			valign: "center"
			size_hint_y: .2
			bold: True
			font_size: dp(18)
		
		MDTextField:
			id: username
			hint_text: "Username"
			mode: "rectangle"
			icon_left: "account"
			text_color_focus: [0, 0, 0, 1] if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			font_size: dp(16)
			pos_hint: {"center_x": .5, "center_y": .7}
			
		Label:
			color: (0,0,0,1) if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			text: "Email:"
			text_size: self.size
			halign: "left"
			valign: "center"
			size_hint_y: .2
			bold: True
			font_size: dp(18)
			
		MDTextField:
			id: email
			hint_text: "Email"
			helper_text: ""
			helper_text_mode: "on_error"
			mode: "rectangle"
			icon_left: "gmail"
			text_color_focus: [0, 0, 0, 1] if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			font_size: dp(16)
			pos_hint: {"center_x": .5, "center_y": .6}
			
		Label:
			color: (0,0,0,1) if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			text: "Password:"
			text_size: self.size
			halign: "left"
			valign: "center"
			size_hint_y: .2
			bold: True
			font_size: dp(18)
			
		MDTextField:
			id: password
			hint_text: "Password"
			helper_text: ""
			helper_text_mode: "on_error"
			mode: "rectangle"
			icon_left: "key-variant"
			text_color_focus: [0, 0, 0, 1] if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			font_size: dp(16)
			password: True
			password_mask: "•"
			pos_hint: {"center_x": .5, "center_y": .5}
			
		Label:
			color: (0,0,0,1) if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			text: "Confirm Password:"
			text_size: self.size
			halign: "left"
			valign: "center"
			size_hint_y: .2
			bold: True
			font_size: dp(18)
			
		MDTextField:
			id: confirm_password
			hint_text: "Confirm Password"
			mode: "rectangle"
			icon_left: "key-variant"
			text_color_focus: [0, 0, 0, 1] if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			font_size: dp(16)
			password: True
			password_mask: "•"
			pos_hint: {"center_x": .5, "center_y": .4}
			
		MDRectangleFlatButton:
			text: "SUBMIT"
			size_hint: .3, .2
			pos_hint: {"center_x": .5, "center_y": .3}
			font_size: dp(17)
			on_release: root.submit_form_data()
			
		Label:
			color: [0,0,0,1] if app.theme_cls.theme_style == "Light" else [1, 1, 1, 1]
			text: "©2022 codewitgabi"
			font_size: dp(17)
			text_size: self.size
			valign: "bottom"
			halign: "center"